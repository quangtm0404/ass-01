@using eStoreClient.Models.ProductDTO;

@model ProductCreateDTO

<form method="post" asp-controller="Product" asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Name" />
            </div>
           
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Unit Price</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="UnitPrice" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Weight</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Weight" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Unit In Stock</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="UnitsInStock" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Category</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control" asp-controller="Product" asp-action="Index">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

