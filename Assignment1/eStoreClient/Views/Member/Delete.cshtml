@using eStoreClient.Models.Auth;


@model MemberDTO

<form method="post" asp-action="Delete" asp-controller="Member">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Member</h1>
        <hr />
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Email</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Email" value="@Model.Email" disabled="" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Company Name</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="CompanyName" value="@Model.CompanyName" disabled="" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">City</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Country" value="@Model.Country" disabled="" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">RoleName</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="RoleName" value="@Model.RoleName" disabled="" />
            </div>
            

            <div class="col-5 offset-2">
                @if(Model.RoleName == "ADMIN")
                {
                    <input type="submit" class="btn btn-danger form-control" value="Delete" disabled=""/>
                } else
                {
                    <input type="submit" class="btn btn-danger" value="Delete" />
                }


            </div>
            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control" asp-controller="Member" asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</form>
