@using eStoreClient.Models.OrderDTO;

@model OrderViewDTO
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Order Detail</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
				<p class="text text-primary">Order Date: @Model.OrderDate.Date</p>
				<p class="text text-primary">Required Date: @Model.RequiredDate.Date</p>
				<p class="text text-primary">Shipped Date @Model.ShippedDate.Date</p>
				<p class="text text-primary">Freight @Model.Freight</p>
			</div>
			
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Id
					</th>
					<th>
						Unit Price
					</th>
					<th>
						Quantity
					</th>
					<th>
						Discount
					</th>
					

					
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.OrderDetails)
				{
					<tr>
						<td>
							@item.Id
						</td>
						<td>
							@item.UnitPrice
						</td>
						<td>
							@item.Quantity
						</td>
						<td>
							@item.Discount
						</td>
						
						
					</tr>
				}
			</tbody>
		</table>

	</div>
