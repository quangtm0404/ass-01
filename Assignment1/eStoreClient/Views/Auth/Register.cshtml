@using eStoreClient.Models.Auth;

@model CreateMemberDTO

<form method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="row">
            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="City" class="form-control" placeholder="Name..." />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="Country" class="form-control" placeholder="Name..." />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="CompanyName" class="form-control" placeholder="Name..." />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>